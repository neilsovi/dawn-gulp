{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="two-col section-{{ section.id }}-padding">
    <div class="wrapper page-width">
        <div class="two-col-heading">
        <h3>{{ section.settings.heading }}</h3>
        </div>

        <div class="two-col-subheading">
        <h6>{{ section.settings.sub_heading }}</h6>
        </div>

        <div class="img-wrapper">

                {% for block in section.blocks %}
                {% case block.type %}
                {% when 'image' %}
                    <div class="block-wrapper">
                        <div class="block-heading">
                            {{ block.settings.block_heading }}
                        </div>

                        <div class="col__item">
                            {% if block.settings.image_link != blank %}
                            <a href="{{ block.settings.image_link }}">
                            {% endif %}
                                <img class="col__item-img" src="{{ block.settings.image | image_url:width:808 }}">
                            {% if block.settings.image_link != blank %}
                            </a>
                            {% endif %}
                        </div>
                    </div>
                {% endcase %}
                {% endfor %}
         </div>   
    </div>
</div>

{% schema %}
{
   "name":"2 Column with Image",
   "max_blocks":3,
   "settings":[
      {
         "type":"text",
         "id":"heading",
         "label":"Section Heading"
      },
      {
         "type":"text",
         "id":"sub_heading",
         "label":"Section Sub Heading"
      },
      {
         "type":"range",
         "id":"padding_top",
         "min":0,
         "max":180,
         "step":10,
         "unit":"px",
         "label":"Padding Top",
         "default":60
      },
      {
         "type":"range",
         "id":"padding_bottom",
         "min":0,
         "max":180,
         "step":10,
         "unit":"px",
         "label":"Padding Bottom",
         "default":60
      }
   ],
   "blocks":[
      {
         "type":"image",
         "name":"Image",
         "settings":[
                  {
         "type":"text",
         "id":"block_heading",
         "label":"Block Heading"
      },
            {
               "type":"image_picker",
               "label":"Iamge",
               "id":"image",
               "info":"Recommended size: 808 by 485px"
            },
            {
            "type":"url",
            "id":"image_link",
            "label":"Image Link"
         }
         ]
      }
   ],
   "presets":[
      {
         "name":"2 Column with Image",
         "category":"ADVANCED LAYOUT"
      }
   ]
}
{% endschema %}

<style>
.two-col .block-heading {
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0px;
}
 .two-col-heading h3 {
     text-align: center;
}
 .two-col-subheading h6{
    text-align: center;
    text-transform: uppercase;
    font-weight: 100;
    padding-bottom:35px;
    
}

.two-col .img-wrapper{
   display: grid;
grid-template-columns: repeat(2, 1fr);
    gap: 8px;
    justify-content: unset;
    transform: scale(1);
}
.two-col .col__item .col__item-img {
   width:100%;
   height:100%;
}

 @media (min-width: 992px) {
    .two-col .img-wrapper{
    grid-template-columns: repeat(2,1fr);
    justify-content: center;
    gap: 16px;
}
}
 
</style>